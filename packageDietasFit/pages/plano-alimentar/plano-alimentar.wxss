.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* Seletor de Dias */
.days-selector {
  background-color: #ffffff;
  padding: 20rpx;
  margin: -20rpx -20rpx 20rpx -20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.days-list {
  display: flex;
  gap: 15rpx;
  padding: 0 10rpx;
}

.day-item {
  padding: 15rpx 30rpx;
  background-color: #f8f8f8;
  border-radius: 30rpx;
  min-width: 120rpx;
  text-align: center;
}

.day-item.active {
  background-color: #4CAF50;
}

.day-name {
  font-size: 28rpx;
  color: #333;
}

.day-item.active .day-name {
  color: #ffffff;
}

/* Lista de Refeições */
.meals-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.meal-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.meal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.meal-info {
  display: flex;
  flex-direction: column;
}

.meal-type {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.meal-time {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

.meal-calories {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: bold;
}

.meal-foods {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.food-item {
  background-color: #f8f8f8;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.meal-actions {
  display: flex;
  justify-content: flex-end;
}

.action-button {
  background-color: transparent;
  color: #4CAF50;
  font-size: 28rpx;
  padding: 0;
  line-height: 1;
  border: none;
}

.action-button::after {
  border: none;
}

/* Botão Adicionar Refeição */
.add-meal {
  margin: 30rpx 0;
}

.add-button {
  background-color: #4CAF50;
  color: #ffffff;
  font-size: 32rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  border: none;
}

/* Resumo do Dia */
.day-summary {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.summary-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.summary-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
} 