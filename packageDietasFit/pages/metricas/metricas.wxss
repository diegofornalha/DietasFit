.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* Seletor de Período */
.period-selector {
  display: flex;
  background-color: #ffffff;
  padding: 10rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.period-item {
  flex: 1;
  text-align: center;
  padding: 15rpx;
  border-radius: 8rpx;
}

.period-item.active {
  background-color: #4CAF50;
}

.period-item text {
  font-size: 28rpx;
  color: #333;
}

.period-item.active text {
  color: #ffffff;
}

/* Métricas Principais */
.metrics-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.metric-card {
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.metric-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.metric-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.metric-change {
  font-size: 24rpx;
  color: #4CAF50;
}

.metric-status {
  font-size: 24rpx;
  color: #666;
}

/* Progresso */
.progress-section {
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.section-subtitle {
  font-size: 24rpx;
  color: #666;
}

.progress-bar {
  width: 100%;
}

/* Medidas Corporais */
.measures-section {
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.add-button {
  background: none;
  border: none;
  color: #4CAF50;
  font-size: 28rpx;
  padding: 0;
  line-height: 1;
}

.add-button::after {
  border: none;
}

.measures-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
  margin-top: 15rpx;
}

.measure-item {
  background-color: #f8f8f8;
  padding: 15rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}

.measure-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.measure-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* Nutrientes */
.nutrients-section {
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.nutrient-item {
  margin-top: 15rpx;
}

.nutrient-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.nutrient-label {
  font-size: 24rpx;
  color: #666;
}

.nutrient-value {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.nutrient-progress {
  width: 100%;
}

/* Botões de Ação */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-top: 30rpx;
}

.action-button {
  width: 100%;
  background-color: #4CAF50;
  color: #ffffff;
  font-size: 32rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  border: none;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-button.outline {
  background-color: transparent;
  color: #4CAF50;
  border: 2rpx solid #4CAF50;
} 