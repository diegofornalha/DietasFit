.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* Barra de Pesquisa */
.search-bar {
  margin-bottom: 20rpx;
}

.search-input {
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* Categorias */
.categories {
  margin-bottom: 20rpx;
  background-color: #ffffff;
  padding: 20rpx;
  margin: -20rpx -20rpx 20rpx -20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.categories-list {
  display: flex;
  gap: 15rpx;
  padding: 0 10rpx;
}

.category-item {
  padding: 15rpx 30rpx;
  background-color: #f8f8f8;
  border-radius: 30rpx;
  min-width: 120rpx;
  text-align: center;
}

.category-item.active {
  background-color: #4CAF50;
}

.category-name {
  font-size: 28rpx;
  color: #333;
}

.category-item.active .category-name {
  color: #ffffff;
}

/* Lista de Receitas */
.recipes-list {
  height: calc(100vh - 240rpx);
}

.recipe-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.recipe-image {
  width: 100%;
  height: 300rpx;
}

.recipe-info {
  padding: 20rpx;
}

.recipe-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.recipe-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.favorite-button {
  padding: 10rpx;
}

.favorite-icon {
  width: 40rpx;
  height: 40rpx;
}

.recipe-details {
  display: flex;
  gap: 30rpx;
  margin-bottom: 15rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.detail-icon {
  width: 32rpx;
  height: 32rpx;
}

.detail-text {
  font-size: 24rpx;
  color: #666;
}

.recipe-ingredients {
  margin-top: 15rpx;
}

.ingredients-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.ingredients-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.ingredient-item {
  background-color: #f8f8f8;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
} 